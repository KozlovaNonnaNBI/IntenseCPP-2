#include <iostream>
#include <cmath>
using namespace std;
int main()
{
    float a, b, t, s, h;
    cout << "Введите длинну большего основания трапеции" << endl;
    cin >> a;
    cout << "Введите длинну меньшего основания трапеции" << endl;
    cin >> b;
    cout << "Введите угол в радиусах" << endl;
    cin >> t;
    h = ((a-b) / 2) * tan(t);
    s = h * ((a+b) / 2);
    cout << "S = " << s << endl;
    return 0;
}
